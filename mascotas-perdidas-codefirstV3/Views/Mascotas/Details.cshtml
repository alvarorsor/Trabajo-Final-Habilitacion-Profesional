@model mascotas_perdidas_codefirstV3.Models.Mascota

@{
    ViewBag.Title = "Details";

}

<link rel="stylesheet" href="~/Content/Styles.css">

<div>


    <div class="detalles--mascota">

        <div class="campos--izquierda--derecha">

            <div class="campos-izquierda">

                <div class="campos">

                    <label>@Html.DisplayNameFor(model => model.Especie.tipo)</label>
                    <br />
                    <label>@Html.DisplayNameFor(model => model.raza)</label>
                    <br />
                    <label>@Html.DisplayNameFor(model => model.fecha_extravio)</label>
                    <br />
                    <label>@Html.DisplayNameFor(model => model.descripcion)</label>
                    <br />

                </div>



                <div class="campos-datos">


                    <label>@Html.DisplayFor(model => model.Especie.tipo)</label>
                    <br />
                    <label>@Html.DisplayFor(model => model.raza)</label>
                    <br />
                    <label>@Model.fecha_extravio.ToString("dd/MM/yyyy")</label>
                    <br />
                    <label class="observaciones">@Html.DisplayFor(model => model.descripcion)</label>


                </div>

            </div>
            <!--cierra campos-izquierda-->



            <div class="campos-derecha">

                <h1 class="detalles--mascota--nombre">@Html.DisplayFor(model => model.nombre)</h1>
                <br />
                <img class="detalles--mascota--imagen" src="@Url.Action("getImage", "Mascotas", new { id = Model.ID })" />

            </div>
            <!--cierra campos-derecha-->



        </div>
        <!--cierra campos-izquierda-derecha-->


        <h3 id="datos-de-contacto">DATOS DE CONTACTO</h3>

        <div class="datos-contacto-dueño">

            <div class="box_dueño_nombre">
                <p id="box_dueño-user">{userIcon}</p>
                <p id="box_dueño-nombre-1">DUEÑO</p>
                <p id="box_dueño-nombre">@Html.DisplayFor(model => model.nombre_dueño)</p>
            </div>


            <div class="box_dueño_telefono">
                <p id="box_dueño-user">{phoneIcon}</p>
                <p id="box_dueño-nombre-1">TELEFONO</p>
                <p id="box_dueño-nombre">@Html.DisplayFor(model => model.telefono_dueño)</p>
            </div>

            <div class="box_dueño_correo">
                <p id="box_dueño-user">{mailIcon}</p>
                <p id="box_dueño-nombre-1">CORREO</p>
                <p id="box_dueño-nombre">@Html.DisplayFor(model => model.correo_dueño)</p>
            </div>

        </div>
        <!--cierra datos-contacto-dueño-->

    </div>


</div>
<p>

    <a href="javascript:history.back()">Volver Atrás</a>

</p>
